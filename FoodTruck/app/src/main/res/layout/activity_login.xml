<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.foodtruck.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/idInput"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_above="@+id/pwInput"
            android:layout_alignLeft="@+id/pwInput"
            android:layout_alignStart="@+id/pwInput"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text="user@naver.com한글" />

        <EditText
            android:id="@+id/pwInput"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_above="@+id/loginBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="user" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="221dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/registerBtn"
            android:layout_toStartOf="@+id/registerBtn"
            android:background="@color/colorPrimary"
            android:text="로그인" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_alignEnd="@+id/pwInput"
            android:layout_alignRight="@+id/pwInput"
            android:layout_below="@+id/pwInput"
            android:text="회원가입"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_marginLeft="3dp"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
